{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".",
    "rootDir": "./",
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": ["*.ts", "*.d.ts"],
  "exclude": ["node_modules", "dist"]
}